@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="text-center">



    <br><br>
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-Sucesso btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <div style="margin: left;"><h1 class="display-4">Listagem de Contatos</h1>
</div>
    <br><br><br><br>
    <table id="table-contatos" class="table table-hover table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-Mail</th>
                <th scope="col">Número</th>
                <th scope="col"><span class="material-symbols-outlined">edit  </span></th>
                <th scope="col"><span class="material-symbols-outlined">delete</span></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <td>@contato.Id</td>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td><a role="button" class="btn btn-outline-secondary text-light" asp-route-id = "@contato.Id" asp-controller="Contato" asp-action="Edit">Editar</a></td>
                        <td><a role="button" class="btn btn-outline-danger"               asp-route-id = "@contato.Id" asp-controller="Contato" asp-action="DeletConfirm">Remover</a></td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhum Contato Encontrado.</td></tr>
            }
        </tbody>
    </table>

    <br><br>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start text-light">
        <a class="btn btn-outline-secondary text-light" role="button" asp-controller="Contato" asp-action="Add">Adicionar Contato</a>
    </div>
</div>


