@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listagem de Usuarios";
}

<div class="text-center">

    <br><br>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-Sucesso btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>    
    }

    <h1 class="display-4">Listagem de Usuários</h1>
    <br><br><br><br>
    <table id = "table-usuarios"class="table table-hover table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">E-Mail</th>
                <th scope="col">Data de Cadastro</th>
                <th scope="col"><span class="material-symbols-outlined">edit  </span></th>
                <th scope="col"><span class="material-symbols-outlined">delete</span></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (UsuarioModel Usuario in Model)
                {
                    <tr>
                        <td>@Usuario.Id</td>
                        <td>@Usuario.Name</td>
                        <td>@Usuario.Login</td>
                        <td>@Usuario.Email</td>
                        <td>@Usuario.DataCadastro</td>
                        <td><a role="button" class="btn btn-outline-secondary text-light" asp-route-id = "@Usuario.Id" asp-controller="Usuario" asp-action="Edit">Editar</a></td>
                        <td><a role="button" class="btn btn-outline-danger"               asp-route-id = "@Usuario.Id" asp-controller="Usuario" asp-action="DeletConfirm">Remover</a></td>
                    </tr>
                }
            }
            else
            {
                <tr class ="odd">
                    <td class="odd">&nbsp;</td>
                    <td class="odd">&nbsp;</td>
                    <td class="odd">&nbsp;</td>
                    <td valign="top">Nenhum Usuário Encontrado.</td>
                    <td class="odd">&nbsp;</td>
                    <td class="odd">&nbsp;</td>
                    <td class="odd">&nbsp;</td>
                </tr>
            }
        </tbody>
    </table>

    <br>
    <br>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start text-light">
        <a class="btn btn-outline-secondary text-light" role="button" asp-controller="Usuario" asp-action="Add">Adicionar Usuário</a>
    </div>
</div>


